<h1>Create Kitten</h1>
<div class="form">
  <% if kitten.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% kitten.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with(model: kitten, local: true, html: { class: 'form-group' }) do |f| %>
    <div class="form_field mb-3">
      <%= f.label :name, class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form_field mb-3">
      <%= f.label :age, class: 'form-label' %>
      <%= f.number_field :age, class: 'form-control' %>
    </div>
    <div class="form_field mb-3">
      <%= f.label :cuteness, class: 'form-label' %>
      <%= f.number_field :cuteness, min: 1, max: 10, class: 'form-control' %>
    </div>
    <div class="form_field mb-3">
      <%= f.label :softness, class: 'form-label' %>
      <%= f.number_field :softness, min: 1, max: 10, class: 'form-control' %>
    </div>
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
    <% if kitten.persisted? %>
      <%= link_to "Delete", kitten_path(kitten), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger' %>
    <% end %>
    <%= link_to "Cancel", root_path, class: 'btn btn-secondary' %>
  <% end %>
</div>