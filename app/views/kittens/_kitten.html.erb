<div class="card mb-3">
    <div class="card-body d-flex justify-content-between align-items-center">
        <div>
            <h5 class="card-title mb-0">
      <%= link_to kitten.name, kitten_path(kitten), class: "text-decoration-none" %>
    </h5>
            <p class="card-text mb-0">Age: <%= kitten.age %></p>
            <p class="card-text mb-0">Cuteness: <%= kitten.cuteness %></p>
            <p class="card-text mb-0">Softness: <%= kitten.softness %></p>
        </div>
        <div class="d-flex">
            <%= link_to "Edit", edit_kitten_path(kitten), class: "btn btn-primary me-2" %>
            <%= link_to "Delete", kitten_path(kitten), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger me-2" %>
            <%= link_to "Home", root_path, class: "btn btn-dark" %>
    </div>
  </div>
</div>
